@model Escuela

@{
    ViewData["Title"] = "Información Escuela";
    Layout = "Simple";
}

<h1>Escuela </h1>
<h2>Nombre : @Model.Nombre </h2>
<h3>Tipo de escuela: @Model.TipoEscuela</h3>

<address>
    <p> Dirección: @Model.Direccion </p>
    <p>País: @Model.Pais</p>
    <p>Ciudad: @Model.Ciudad</p>
</address>

<p>
    <strong>Año de fundación: @Model.AnhoDeCreacion </strong>
</p>

<p>
    <i>@ViewData["CosaDinamica"]</i>
</p>